<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ImageViewer">
        <!--是否显示图片位置-->
        <attr name="ivr_show_index" format="boolean" />
        <!--是否开启进场动画-->
        <attr name="ivr_do_enter" format="boolean" />
        <!--是否开启退场动画-->
        <attr name="ivr_do_exit" format="boolean" />
        <!--进场与退场动画的执行时间-->
        <attr name="ivr_duration" format="integer" />
        <!--是否允许图片拖拽-->
        <attr name="ivr_do_drag" format="boolean" />
        <!--拖拽模式-->
        <attr name="ivr_drag_type">
            <enum name="classic" value="1" />
            <enum name="wechat" value="2" />
        </attr>
        <!--是否允许图片缩放-->
        <attr name="ivr_scaleable" format="boolean" />
    </declare-styleable>
</resources>