<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ivr_ImagePager">
        <!--是否执行进场动画-->
        <attr name="imgpg_doEnterAnim" format="boolean" />
        <!--是否执行退场动画-->
        <attr name="imgpg_doExitAnim" format="boolean" />
        <!--动画执行时间-->
        <attr name="imgpg_duration" format="integer" />
        <!--是否允许拖拽-->
        <attr name="imgpg_canDragged" format="boolean" />
        <!--拖拽模式-->
        <attr name="imgpg_dragMode">
            <enum name="classic" value="1" />
            <enum name="agile" value="2" />
        </attr>
        <!--是否可以背景渐变-->
        <attr name="imgpg_canBgAlpha" format="boolean" />
        <!--是否显示加载进度-->
        <attr name="imgpg_showProgress" format="boolean" />
    </declare-styleable>
</resources>